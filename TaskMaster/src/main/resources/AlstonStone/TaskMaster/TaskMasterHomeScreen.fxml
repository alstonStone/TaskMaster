<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AlstonStone.TaskMaster.TaskMasterHomeScreenController">
   <top>
      <Label fx:id="TitleLable" alignment="CENTER" prefHeight="50.0" prefWidth="1024.0" text="Task Master" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
   </top>
   <right>
      <Button fx:id="AddTaskButton" alignment="CENTER" mnemonicParsing="false" onAction="#OpenAddTaskDisplay" prefHeight="25.0" prefWidth="100.0" text="Add Task" textAlignment="CENTER" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <ScrollPane fx:id="TaskDisplay" prefHeight="500.0" prefWidth="824.0" vbarPolicy="ALWAYS" BorderPane.alignment="CENTER">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" />
        </content>
      </ScrollPane>
   </bottom>
   <left>
      <Button fx:id="PastTasksButton" alignment="CENTER" mnemonicParsing="false" onAction="#OpenPastTasksDisplay" prefHeight="25.0" prefWidth="100.0" text="Past Tasks" textAlignment="CENTER" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
